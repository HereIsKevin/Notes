{
  "name": "notes",
  "version": "0.1.0",
  "description": "Simple, cross-platform notes app built with web technologies",
  "main": "index.min.js",
  "scripts": {
    "clean:build": "shx rm -rf ./build/",
    "clean:dist": "shx rm -rf ./dist/",
    "clean": "npm-run-all --parallel clean:build clean:dist",
    "watch:html": "nodemon --exec 'npm run build:html' --ext html --watch ./src/view/",
    "watch:sass": "sass --watch ./src/view/styles/main.scss ./build/view/styles/main.css",
    "watch:tsc": "tsc --watch",
    "watch:bundle": "webpack --watch",
    "watch": "npm-run-all --sequential build:development --parallel watch:html watch:sass watch:tsc watch:bundle",
    "build:html": "shx cp ./src/view/index.html ./build/view/index.html",
    "build:sass": "sass ./src/view/styles/main.scss ./build/view/styles/main.css",
    "build:tsc": "tsc",
    "build:fonts": "shx cp -r ./src/view/fonts/ ./build/view/fonts/",
    "build:bundle": "webpack",
    "build:minify:app": "terser --config-file ./terser.json --output ./dist/index.min.js -- ./build/index.min.js",
    "build:minify:view": "terser --config-file ./terser.json --output ./dist/view/app.min.js -- ./build/view/app.min.js",
    "build:minify:styles": "cleancss --output ./dist/view/styles/main.css --level 2 ./build/view/styles/main.css",
    "build:mkdir:styles": "shx mkdir -p ./dist/view/styles/",
    "build:mkdir:view": "shx mkdir -p ./dist/view/",
    "build:mkdir:app": "shx mkdir -p ./dist/",
    "build:minify": "npm-run-all --sequential build:mkdir:app build:minify:app build:mkdir:view build:minify:view build:mkdir:styles build:minify:styles",
    "build:development": "npm-run-all --parallel build:sass build:tsc --sequential build:fonts build:html build:bundle",
    "build:copy:fonts": "shx cp -r ./build/view/fonts/ ./dist/view/fonts/",
    "build:copy:html": "shx cp -r ./build/view/index.html ./dist/view/index.html",
    "build:copy:package": "shx cp -r ./package.json ./dist/package.json",
    "build:copy": "npm-run-all --parallel build:copy:fonts build:copy:html build:copy:package",
    "build:release": "npm-run-all --sequential build:development build:minify build:copy",
    "pack:macos": "electron-packager ./dist/ Notes --overwrite --icon ./resources/icons/notes.icns --platform=darwin",
    "pack:windows": "electron-packager ./dist/ Notes --overwrite --icon ./resources/icons/notes.ico --platform=win32",
    "lint": "eslint --ext .ts ./src/",
    "electron": "electron ./build/",
    "format:check": "prettier --check ./src/",
    "format:write": "prettier --write ./src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HereIsKevin/Notes.git"
  },
  "author": "Kevin Feng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HereIsKevin/Notes/issues"
  },
  "homepage": "https://github.com/HereIsKevin/Notes#readme",
  "dependencies": {
    "boredom": "https://github.com/HereIsKevin/boreDOM/releases/download/v0.5.0/boredom-0.5.0.tgz"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "clean-css": "^4.2.3",
    "clean-css-cli": "^4.3.0",
    "electron": "^9.1.0",
    "electron-packager": "^15.0.0",
    "eslint": "^7.5.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "sass": "^1.26.10",
    "shx": "^0.3.2",
    "terser": "^4.8.0",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
